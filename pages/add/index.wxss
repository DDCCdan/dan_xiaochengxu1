/* pages/add/index.wxss */
.add-type{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}
.add-detail{
  width: 95%;
  margin-top: 30px;
  display: flex;
  flex-direction: column;
}
.add-info{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.date-info{
  border-right: 1px solid #999;
  text-align: center;
}
.amount-info{
  font-weight: bold;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-right: 15px;
}
.amount-info .van-cell{
  padding: 0 !important;
}
.amount-info .van-cell__left-icon-wrap {
  font-size: 24px !important;
}
.amount-text{
  color: #ed3f14;
  position: relative;
  right: -15px;
  z-index: 9;
}
.add-remark{
  width: 100%;
  margin-top: 15px;
  display: flex;
  flex-direction: row;
}
.remark-icon{
  padding: 10px;
}
.remark-input{
  padding: 0 10px !important;
}
.add-type-detail{
  margin-top: 20px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.type-detail{
  width: 40px;
  text-align: center; 
  color: #ed3f14;
  display: flex;
}
.type-dropdown{
  display: flex;
  justify-content: space-evenly;
}
.temp-text{
  font-size: 12px;
  color: #999;
  font-weight: bold;
}
/* 图片样式 */
.add-pic{
  margin-top: 20px;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: flex-end;
}
.add-footer{
  position: fixed;
  bottom: 20px;
}
